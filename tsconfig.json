{
  "compilerOptions": {
    "types": ["node"],
    "strict": false,

    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "@printful-ts/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./**/*",
    "./**/*.json"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "tsconfig.json",
    "tsconfig-build.json"
  ]
}